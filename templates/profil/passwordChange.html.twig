{% extends 'single.html.twig' %}

{% block title %}{{ parent() }} Votre compte{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('css/profil.css')) }}">
{% endblock %}

{% block single_header %}
    {{ include('structure/_breadcrum.html.twig',
        {
            'domaine': 'Utilisateur',
            'action' : 'Changement du mot de passe'
        }) }}
{% endblock %}

{% block single_body %}
    <div class="row justify-content-center">
        <section class="col-sm-12 col-md-8 col-lg-8 col-xl-6">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.plainPasswordOld) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.plainPassword) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.plainPasswordConfirmation) }}
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-info " name="update" id="update"><i class="fas fa-pencil-alt"></i>
                        Modifier
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}