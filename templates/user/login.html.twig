{% extends 'single.html.twig' %}

{% block title %}{{ parent() }} Connexion{% endblock %}

{% block single_header %}
    {{ include('structure/_breadcrum.html.twig',
        {
            'domaine': 'Utilisateur',
            'action' : 'Connexion'
        }) }}
{% endblock %}

{% block single_body %}
    <section class="blog-wrapper sect-pt4  mb-4" id="topsection">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="card ">

                    <div class="card-body ">
                        <div class="card-title  text-center mb-5 display-4">
                            Connexion
                        </div>
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" value="{{ last_username }}"
                                               placeholder="Nom d'utilisateur" name="username" id="inputUsername"
                                               class="form-control" required autofocus>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <input type="password" name="password" placeholder="Mot de passe"
                                               id="inputPassword" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"><em>  Se souvenir de moi</em>
                                </label>
                            </div>

                            <p class="text-center">
                                <button class="btn btn-lg btn-primary  mb-4" id="login" name="login" type="submit">
                                    Connexion
                                </button>
                            </p>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
