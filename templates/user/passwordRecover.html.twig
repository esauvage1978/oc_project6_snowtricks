{% extends 'single.html.twig' %}

{% block title %}{{ parent() }}Modifier votre mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('css/profil.css')) }}">
{% endblock %}

{% block single_header %}
    {{ include('structure/_breadcrum.html.twig',
        {
            'domaine': 'Utilisateur',
            'action' : 'Modifier votre mot de passe'
        }) }}
{% endblock %}

{% block single_body %}
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-5  ">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.plainPassword) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.plainPasswordConfirmation) }}
                        </div>
                    </div>

                    <button name="f" id="recover" class="btn btn-primary m-5">
                        Modifier
                    </button>

                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="row mt-5">
            <div class="col-md-12 d-flex justify-content-start">
                <h5>
                    <a class="d-flex justify-content-center" href="{{ path('user_login') }}"
                       title="Create an account">
                        Déjà un compte ?
                    </a>
                </h5>
            </div>
        </div>
    </div>
{% endblock %}